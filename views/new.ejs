<% include partials/header.ejs %>
<div class="ui main text container segment">
  <div class="ui huge header">New Blog Post</div>
  <form action="/blogs" method="post" class='ui form'>
    <div class="field">
      <label>Title</label>
        <input type="text" name='blog[title]' placeholder='title'>
    </div>
    <div class="field">
      <label>Image</label>
        <input type="text" name='blog[image]' placeholder='image'>
    </div>
    <div class="field">
      <label>Post Content</label>
      <textarea name="blog[body]" rows="8" cols="80"></textarea>
    </div>
    <button type="Submit" name="button" class="ui primary button">Post</button>
  </form>
</div>
